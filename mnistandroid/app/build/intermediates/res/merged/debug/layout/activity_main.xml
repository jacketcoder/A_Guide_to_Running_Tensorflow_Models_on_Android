<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bgcover"/>

    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="A Step Towards Digital Nepal"
        android:textColor="#b7b8ba"
        android:textSize="12dp" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:background="@drawable/scanbtn"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:paddingTop="12dp"
        android:text="Scan"
        android:clickable="true"
        android:onClick="btnClick"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/loadbtn"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="65dp"
        android:paddingRight="65dp"
        android:paddingTop="12dp"
        android:text="Load Previous"
        android:textColor="#2dbcff"
        android:textSize="16dp" />
    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />




</LinearLayout>
